<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <fragment
        android:id="@+id/mainCalendarFragment"
        android:name="com.example.shoppinglistgenerator.mainCalendarFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/mainFragmentDailyRecipes"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="20dp" />

    <fragment
        android:id="@+id/mainFragmentDailyRecipes"
        android:name="com.example.shoppinglistgenerator.mainFragmentDailyRecipes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toTopOf="@+id/addFoodItemButton"
        app:layout_constraintTop_toBottomOf="@id/mainCalendarFragment"
        tools:layout_editor_absoluteX="20dp" />

    <Button
        android:id="@+id/addRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Recipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/mainFragmentDailyRecipes" />

    <Button
        android:id="@+id/addFoodItemButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Food"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/adToListButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/addRecipeButton" />

    <Button
        android:id="@+id/adToListButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to List"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mainFragmentDailyRecipes" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addToDayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="@+id/mainFragmentDailyRecipes"
        app:layout_constraintEnd_toEndOf="@+id/mainFragmentDailyRecipes"
        app:srcCompat="@android:drawable/ic_input_add" />

</androidx.constraintlayout.widget.ConstraintLayout>